{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "lib",
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "esnext.array",
      "DOM"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": "./",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}